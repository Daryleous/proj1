<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h4>Pokemons:</h4>
       <ul>
          <% @trainer.pokemons.each do |pokemon| %>
            <li><%= pokemon.name %>: <%= pokemon.level %>: <%= pokemon.health %>: <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %></li>      

        </ul>
<% end %>
<p> <% if @trainer.id == current_trainer.id %>
	<%= button_to "New Pokemon!", new_pokemon_path, :class => "button medium", :method => :get %>
	<% end %>